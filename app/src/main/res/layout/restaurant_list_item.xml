<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="@dimen/padding_m"
    tools:context=".CategoryActivity">

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_font_size_l"
        tools:text="Restaurant Name"
        tools:textColor="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_s"
        android:background="@android:color/white"
        tools:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/type"
            android:textColor="@android:color/white"
            tools:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/restaurant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxEms="15"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            tools:text="Indian, Chinese, Japanese, European"
            tools:textColor="@color/colorPrimary"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/address"
            android:textColor="@android:color/white"
            tools:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxEms="15"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            tools:text="Restaurant Address"
            tools:textColor="@color/colorPrimary"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/phone"
            android:textColor="@android:color/white"
            tools:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/restaurant_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:autoLink="phone"
            android:textColor="@android:color/white"
            tools:text="+40753033123"
            tools:textColor="@color/colorPrimary"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/program"
            android:textColor="@android:color/white"
            tools:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/restaurant_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxEms="15"
            android:textColor="@android:color/white"
            tools:text="Mon-Fri: 12:00 - 23:00\nSat-Sun: 14:00 - 22:00"
            tools:textColor="@color/colorPrimary"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>


</LinearLayout>