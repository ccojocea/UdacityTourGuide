<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/padding_m"
    tools:context=".CategoryActivity">

    <TextView
        android:id="@+id/museum_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_font_size_l"
        tools:text="Museum Name"
        tools:textColor="@color/colorPrimary" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/museum_name"
        android:layout_marginBottom="@dimen/margin_s"
        android:background="@android:color/white"
        tools:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/museum_image"
        android:layout_width="100dp"
        android:layout_height="134dp"
        android:layout_below="@id/separator"
        android:layout_marginEnd="@dimen/margin_s"
        tools:src="@drawable/museum_art_thumb"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_toEndOf="@id/museum_image"
        android:text="@string/address"
        android:textColor="@android:color/white"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/museum_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/separator"
        android:maxEms="12"
        android:textColor="@android:color/white"
        tools:text="Museum Address"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/museum_address"
        android:layout_toEndOf="@id/museum_image"
        android:text="@string/visiting_hours"
        android:textColor="@android:color/white"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/museum_visiting_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/museum_address"
        android:maxEms="13"
        android:textColor="@android:color/white"
        tools:text="Mon-Fri: 12:00 - 23:00\nSat-Sun: 14:00 - 22:00"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/museum_visiting_hours"
        android:layout_toEndOf="@id/museum_image"
        android:text="@string/web"
        android:textColor="@android:color/white"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/museum_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/museum_visiting_hours"
        android:autoLink="web"
        android:maxEms="13"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        tools:text="www.rea.rea.rea.re.re.re.re.rr.com.ro"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/museum_web"
        android:layout_toEndOf="@id/museum_image"
        android:text="@string/email"
        android:textColor="@android:color/white"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/museum_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/museum_web"
        android:autoLink="email"
        android:maxEms="13"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:text="@string/no_mail"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/museum_mail"
        android:layout_toEndOf="@id/museum_image"
        android:text="@string/phone"
        android:textColor="@android:color/white"
        tools:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/museum_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/museum_mail"
        android:autoLink="phone"
        android:textColor="@android:color/white"
        tools:text="+40753033202"
        tools:textColor="@color/colorPrimary" />

</RelativeLayout>